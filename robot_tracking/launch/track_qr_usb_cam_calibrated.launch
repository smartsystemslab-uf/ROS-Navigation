<!-- This launch file launches the visp_auto_tracker module and allows you to visualize tracking in a usb_cam window-->
<launch>	
  <node pkg="visp_auto_tracker" type="visp_auto_tracker" name="visp_auto_tracker" output="screen">
    <param name="model_path" value="$(find robot_tracking)/models" />
    <param name="model_name" value="pattern" />
    <param name="debug_display" value="True" />
	      
    <remap from="/visp_auto_tracker/camera_info" to="/usb_cam/camera_info"/>
    <remap from="/visp_auto_tracker/image_raw" to="/usb_cam/image_raw"/>
  </node>
  
  <node pkg="usb_cam" type="usb_cam_node" name="usb_cam" output="screen">      
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="video_device" value="/dev/video2" /> <!-- Need to change this value to your usb camera device-->
    <param name="pixel_format" value="yuyv" />
    
    <param name="camera_name" value="camera/image_raw" />
    <param name="camera_info_url" value="file://$(find robot_tracking)/models/calibration_microsoft_lifecam.yml" />
  </node>
</launch>